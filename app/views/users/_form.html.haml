= form_for @user do |f|
  = f.error_messages
  %table{:border => "0", :cellpadding => "0", :cellspacing => "10", :width => "80%"}
    %tr
      %td= f.label :first_name
      %td= f.text_field :first_name
    %tr
      %td= f.label :last_name
      %td= f.text_field :last_name
    %tr
      %td= f.label :email
      %td= f.text_field :email
    %tr
      %td= f.label :password
      %td= f.password_field :password
    %tr
      %td= f.label :password_confirmation
      %td= f.password_field :password_confirmation
    %tr
      %td= f.label :country
      %td= localized_country_select(:user, :country, [], :include_blank => 'Please choose...')
    %tr
      %td= f.label :state
      %td= f.text_field :state
    %tr
      %td= f.label :zipcode
      %td= f.text_field :zipcode
    %tr
      %td= f.label :gender
      %td= select :user, :gender, {:female=>false, :male=>true}
    %tr
      %td= f.label :birth_date
      %td= f.date_select :birth_date, :start_year => 1950
    %tr
      %td
        = f.submit
        = button_to_function "Cancel", "history.back()"