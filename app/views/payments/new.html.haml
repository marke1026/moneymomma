%h1 Setup Recurring Payment
= form_for @payment do |f|
  = f.error_messages
  %table{:border => "0", :cellpadding => "0", :cellspacing => "10", :width => "80%"}
    %tr
      %td= f.label :payee
      %td= select(:payment, :payee_id, current_user.payees.find(:all).collect{|p| [ p.name, p.id ] }, { :include_blank => true })
    %tr
      %td= f.label :delivery_time
      %td= f.select :delivery_time, ["15th day of the month", "last day of the month", "both"], {:include_blank => true}
    %tr
      %td= f.label :suffix
      %td= f.text_field :suffix
    %tr
      %td= f.label :amount
      %td
        $
        = f.text_field :amount, :size=>"7"
    %tr
      %td= f.label :number_of_payments
      %td= f.text_field :number_of_payments
    %tr
      %td
        = f.submit "Add Payment"
        = button_to_function "Cancel", "history.back()"