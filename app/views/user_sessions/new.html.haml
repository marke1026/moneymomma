#art_content
  - flash.each do |name, msg|
    = content_tag :div, msg, :id => "flash_#{name}"
  .log_in
    %table{:align => "center", :border => "0", :width => "250px"}
      - form_for @user_session do |f|
        = f.error_messages
        %tr
          %td{:align => "left", :height => "32", :valign => "top"}
            %span.log Log in to MoneyMomma
            %img{:align => "bottom", :alt => "lock", :height => "27", :src => "/images/lock.png", :width => "28"}
        %tr
          %td{:height => "35", :valign => "bottom"} Email
        %tr
          %td{:height => "33"}= f.text_field :email
        %tr
          %td{:align => "left", :height => "34", :valign => "bottom"} password
        %tr
          %td{:height => "35"}= f.password_field :password
        %tr
          %td{:height => "35"}
            = f.check_box :remember_me
            = f.label "Remember my email on this computer", :style=>"font-size:12px;"
        %tr
          %td{:height => "30"}= f.submit "Login"
  #do_not
    .do_not_text
      %span.do_not_text_col Do not have an account
      %br/
      =link_to "Sign up now!", new_user_path
      %br/
      %br/
      %span.do_not_text_col Did your forget your password
      %br/
      = link_to 'forgot password?', new_password_reset_path, :tabindex => 999 